{
    "name": "hbynlsl/spf",
    "description": "simple php framework",
    "type": "library",
    "autoload": {
        "psr-4": {
            "spf\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "hbynlsl",
            "email": "hbynlsl@hotmail.com"
        }
    ],
    "require": {
        "filp/whoops": "^2.14",
        "hassankhan/config": "^3.0",
        "symfony/var-dumper": "^5.4",
        "old-smoke-gun/php-jwt": "^1.0",
        "pecee/simple-router": "4.3.7.2",
        "prinx/dotenv": "^1.0",
        "psr/container": "^2.0"
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('vendor/hbynlsl/spf/src/spf', 'spf');\"",
            "php -r \"copy('vendor/hbynlsl/spf/src/routes.php', 'routes.php');\"",
            "php -r \"copy('vendor/hbynlsl/spf/src/.env', '.env');\"",
            "php -r \"copy('vendor/hbynlsl/spf/src/.env.development', '.env.development');\"",
            "php -r \"mkdir('configs');\"",
            "php -r \"copy('vendor/hbynlsl/spf/src/configs/app.php', 'configs/app.php');\"",
            "php -r \"mkdir('public');\"",
            "php -r \"copy('vendor/hbynlsl/spf/src/public/index.php', 'public/index.php');\"",
            "php -r \"mkdir('app');\"",
            "php -r \"mkdir('app/controllers');\"",
            "php -r \"mkdir('app/providers');\"",
            "php -r \"mkdir('app/middlewares');\""
        ]
    }
}
